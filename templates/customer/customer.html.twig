{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-success">
            {% for message in messages %}
            <p>{{ message }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}

<h1>Visiteur 1 / {{ numberOfTickets }}</h1>

<hr class="my-4">

<div class="container mt-3">

    {{ form_start(form) }}

    {{ form_widget(form) }}

    <button type="#" class="btn btn-info my-3">Visiteur suivant</button>

    <button type="submit" class="btn btn-success my-3">Terminer la commande</button>

    {{ form_end(form) }}

    <div class='response my-3 text-warning' style='display: none'>
        <p><em>\"Il sera nécessaire de présenter votre carte étudiant, militaire ou équivalent lors de votre entrée au musée !\"</em></p>
    </div>

</div>

{% endblock %}

