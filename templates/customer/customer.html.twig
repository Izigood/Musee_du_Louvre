{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

{% for label, messages in app.flashes(['success', 'danger']) %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div class="container mt-3">

    {{ form_start(form) }}

    <hr class="my-4">
        <h1>Billet N° : {{ ticket }} / {{ numberOfTickets }}</h1>
    <hr class="my-4">

    {{ form_widget(form) }}

    {% if ticket < numberOfTickets %}
        <button type="submit" class="btn btn-info my-3">Visiteur suivant</button>
    {% endif %}

    {% if ticket == numberOfTickets %}
        <button type="#" class="btn btn-success my-3">Terminer la commande</button>
    {% endif %}

    {{ form_end(form) }}

    <div class='response my-3 text-warning' style='display: none'>
        <p><em>Il sera nécessaire de présenter votre carte étudiant, militaire ou équivalent lors de votre entrée au musée !</em></p>
    </div>

</div>

{% endblock %}

